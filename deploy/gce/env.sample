# Runtime toggles
ASTER_ENABLE_TRADING=false
ASTER_DELETE_LOGS=false
ASTER_UPDATE_LOGS=true

# Universe and runtime cadence
ASTER_SYMBOLS=ETHUSDT
ASTER_POLL_TIME=600
ASTER_LOG_DIR=/opt/aster/logs

# Sizing and strategy params
ASTER_ORDER_NOTIONAL=5.0
ASTER_K=1.3
ASTER_T=30
ASTER_N=1.3
ASTER_V=30
ASTER_MAX_SPREAD=0.2
ASTER_MAX_FUNDING_ABS_BPS=1.5
ASTER_TAKER_FEE_BPS=4.0
ASTER_TAKE_PROFIT_BPS=20.0
ASTER_STOP_LOSS_BPS=12.0
ASTER_TRAILING_ACTIVATION_BPS=8.0
ASTER_TRAILING_ACTIVATION_BUFFER_BPS=0.5
ASTER_TRAILING_CALLBACK_BPS=6.0
ASTER_MIN_TAKE_PROFIT_GAP_BPS=4.0
ASTER_MARGIN_SAFETY_MULTIPLE=1.2
ASTER_DAILY_DRAWDOWN_BLOCKER_PCT=5.0
ASTER_REENTRY_COOLDOWN_MIN=10

# Daily UTC schedule controls (used to flatten before maintenance window).
ASTER_ENTRY_HALT_UTC=23:00
ASTER_FORCE_EXIT_UTC=23:50

# Secret Manager + local secret file target
ASTER_API_KEY_SECRET_NAME=aster-api-key
ASTER_API_SECRET_SECRET_NAME=aster-api-secret
ASTER_SECRET_DIR=/opt/aster/.secrets

# Daily BigQuery batch + local log retention.
# BigQuery uses partitioning on `date` and clustering on symbol/hour/minute/second.
ASTER_BQ_ENABLE_DAILY_BATCH=true
ASTER_BQ_PROJECT=
ASTER_BQ_DATASET=aster
ASTER_BQ_LOCATION=
ASTER_LOG_RETENTION_DAYS=7

# Backtest runtime (config-driven, optional systemd timer)
ASTER_BACKTEST_CONFIG_FILE=/opt/aster/backtest/config_grid.json
ASTER_BACKTEST_CONFIG_MAP_CSV=/opt/aster/backtest/results/config_mapping.csv
ASTER_BACKTEST_RANKED_CSV=/opt/aster/backtest/results/ranked_metrics.csv
ASTER_BACKTEST_INPUTS_CSV=/opt/aster/backtest/backtest_inputs.csv
ASTER_BACKTEST_BUILD_INPUTS=true
ASTER_BACKTEST_QUERY_SYMBOLS=
ASTER_BACKTEST_START_DATE=
ASTER_BACKTEST_END_DATE=
ASTER_BACKTEST_FEATURE_WINDOWS=10,30,60

# Email reports (production daily timer + backtest on completion)
ASTER_EMAIL_PROD_ENABLE=true
ASTER_EMAIL_BACKTEST_ENABLE=true
ASTER_EMAIL_BACKTEST_ON_COMPLETION=true
ASTER_EMAIL_SMTP_HOST=smtp.gmail.com
ASTER_EMAIL_SMTP_PORT=587
ASTER_EMAIL_SMTP_USER=vineeth.gopu@gmail.com
ASTER_EMAIL_SMTP_PASS_SECRET_NAME=aster-email-smtp-pass
ASTER_EMAIL_TO_PROD=vineeth.gopu@gmail.com,arjunsinhanj@gmail.com
ASTER_EMAIL_TO_BACKTEST=vineeth.gopu@gmail.com,arjunsinhanj@gmail.com
