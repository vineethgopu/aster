# Runtime toggles
ASTER_ENABLE_TRADING=false
ASTER_DELETE_LOGS=false
ASTER_UPDATE_LOGS=true

# Universe and runtime cadence
ASTER_SYMBOLS=ETHUSDT
ASTER_POLL_TIME=600
ASTER_LOG_DIR=/opt/aster/logs

# Sizing and strategy params
ASTER_ORDER_NOTIONAL=5.0
ASTER_K=1.3
ASTER_T=30
ASTER_N=1.3
ASTER_V=30
ASTER_MAX_SPREAD=0.2
ASTER_MAX_FUNDING_ABS_BPS=1.5
ASTER_TAKER_FEE_BPS=4.0
ASTER_TAKE_PROFIT_MULT=3.0
ASTER_STOP_LOSS_BPS=-1.0
ASTER_TRAILING_ACTIVATION_FRAC=0.5
ASTER_TRAILING_CALLBACK_RATE=-1.0
ASTER_MARGIN_SAFETY_MULTIPLE=1.2
ASTER_REENTRY_COOLDOWN_MIN=10

# Daily UTC schedule controls (used to flatten before maintenance window).
ASTER_ENTRY_HALT_UTC=23:00
ASTER_FORCE_EXIT_UTC=23:50

# Secret Manager + local secret file target
ASTER_API_KEY_SECRET_NAME=aster-api-key
ASTER_API_SECRET_SECRET_NAME=aster-api-secret
ASTER_SECRET_DIR=/opt/aster/.secrets

# Daily BigQuery batch + local log retention.
# BigQuery uses partitioning on `date` and clustering on symbol/hour/minute/second.
ASTER_BQ_ENABLE_DAILY_BATCH=true
ASTER_BQ_PROJECT=
ASTER_BQ_DATASET=aster
ASTER_BQ_LOCATION=
ASTER_LOG_RETENTION_DAYS=7
